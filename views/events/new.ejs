          <option value="10-15">10-15</option>
          <option value="15-20">15-20</option>
          <option value="20+">20+</option>
        </select>
      </label>
  
      <label>Venue type:
        <select name="venueType">
          <option value="Indoor">Indoor</option>
          <option value="Outdoor">Outdoor</option>
        </select>
      </label>
    </div>


